{{#if addNewAnswer}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Enter your answer:</label>
      {{input class="form-control" value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="author">Enter your name:</label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <button class="btn btn-info" {{action 'saveAnswer'}}>Submit Answer</button>
  </form>
</div>
{{else}}
  <button class="btn btn-info" {{action 'addNewAnswer'}}>Add an answer</button>
{{/if}}
