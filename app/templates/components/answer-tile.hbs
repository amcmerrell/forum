<div class="row">
  <div class="col-md-11 col-md-offset-1">
    <div class="well answer-well">
      <h4><strong>{{answer.author}}</strong></h4>
      <p><em>{{answer.title}}</em></p>
      <div class="upvote">
        <p class="pull-right"><strong>{{answer.upvotes}} upvotes</strong></p>
        <button title="upvote" class="btn btn-xs btn-info pull-right"><span class="glyphicon glyphicon-arrow-up"></span></button>
      </div>
    </div>
  </div>
</div>
